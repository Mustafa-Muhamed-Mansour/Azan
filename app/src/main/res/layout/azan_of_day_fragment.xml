<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

 <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".day.AzanOfDayFragment"
        android:orientation="vertical"
        >

        <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_margin="@dimen/_5sdp"
                    >

                    <EditText
                        android:id="@+id/edit_city"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="City Name"
                        android:textColorHint="@color/black"
                        android:textSize="@dimen/_18ssp"
                        android:textColor="@color/black"
                        android:layout_margin="@dimen/_3sdp"
                        android:padding="@dimen/_7sdp"
                        />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fab_search_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/ic_search"
                        android:background="#00000000"
                        app:backgroundTint="@color/white"
                        android:clickable="true"
                        android:focusable="true"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/txt_time_fagr"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/_15ssp"
                        android:textColor="@color/black"
                        android:layout_margin="@dimen/_3sdp"
                        android:padding="@dimen/_3sdp"
                        android:gravity="center"
                        />

                    <View
                        android:layout_width="@dimen/_3sdp"
                        android:layout_height="match_parent"
                        android:background="@color/teal_700"
                        android:layout_margin="@dimen/_3sdp"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="الفجر"
                        android:textSize="@dimen/_17ssp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_margin="@dimen/_3sdp"
                        android:padding="@dimen/_3sdp"
                        android:gravity="center"
                        />

                </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/txt_time_sunrise"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/_15ssp"
                android:textColor="@color/black"
                android:layout_margin="@dimen/_3sdp"
                android:padding="@dimen/_3sdp"
                android:gravity="center"
                />

            <View
                android:layout_width="@dimen/_3sdp"
                android:layout_height="match_parent"
                android:background="@color/teal_700"
                android:layout_margin="@dimen/_3sdp"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="شروق الشمس"
                android:textSize="@dimen/_17ssp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_margin="@dimen/_3sdp"
                android:padding="@dimen/_3sdp"
                android:gravity="center"
                />

        </LinearLayout>


        <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/txt_time_duhr"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/_15ssp"
                        android:textColor="@color/black"
                        android:layout_margin="@dimen/_3sdp"
                        android:padding="@dimen/_3sdp"
                        android:gravity="center"
                        />

                    <View
                        android:layout_width="@dimen/_3sdp"
                        android:layout_height="match_parent"
                        android:background="@color/teal_700"
                        android:layout_margin="@dimen/_3sdp"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="الضهر"
                        android:textSize="@dimen/_17ssp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_margin="@dimen/_3sdp"
                        android:padding="@dimen/_3sdp"
                        android:gravity="center"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/txt_time_asr"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/_15ssp"
                        android:textColor="@color/black"
                        android:layout_margin="@dimen/_3sdp"
                        android:padding="@dimen/_3sdp"
                        android:gravity="center"
                        />

                    <View
                        android:layout_width="@dimen/_3sdp"
                        android:layout_height="match_parent"
                        android:background="@color/teal_700"
                        android:layout_margin="@dimen/_3sdp"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="العصر"
                        android:textSize="@dimen/_17ssp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_margin="@dimen/_3sdp"
                        android:padding="@dimen/_3sdp"
                        android:gravity="center"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/txt_time_maghrab"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/_15ssp"
                        android:textColor="@color/black"
                        android:layout_margin="@dimen/_3sdp"
                        android:padding="@dimen/_3sdp"
                        android:gravity="center"
                        />

                    <View
                        android:layout_width="@dimen/_3sdp"
                        android:layout_height="match_parent"
                        android:background="@color/teal_700"
                        android:layout_margin="@dimen/_3sdp"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="المغرب"
                        android:textSize="@dimen/_17ssp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_margin="@dimen/_3sdp"
                        android:padding="@dimen/_3sdp"
                        android:gravity="center"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/txt_time_isha"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/_15ssp"
                        android:textColor="@color/black"
                        android:layout_margin="@dimen/_3sdp"
                        android:padding="@dimen/_3sdp"
                        android:gravity="center"
                        />

                    <View
                        android:layout_width="@dimen/_3sdp"
                        android:layout_height="match_parent"
                        android:background="@color/teal_700"
                        android:layout_margin="@dimen/_3sdp"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="العشاء"
                        android:textSize="@dimen/_17ssp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_margin="@dimen/_3sdp"
                        android:padding="@dimen/_3sdp"
                        android:gravity="center"
                        />

                </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_3sdp"
            android:background="@color/teal_700"
            android:layout_margin="@dimen/_5sdp"
            />

                <TextView
                    android:id="@+id/txt_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_23ssp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_margin="@dimen/_5sdp"
                    android:padding="@dimen/_5sdp"
                    android:layout_gravity="center"
                    />


    </LinearLayout>

 </androidx.core.widget.NestedScrollView>

</layout>